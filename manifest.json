{
  "manifest_version": 2,

  "name": "Domain Switcher",
  "description": "This extension facilitates web development by allowing the user to easily switch domains on specified URLs",
  "version": "1.0",
  "options_page": "options.html",
  // "content_scripts": [
  //   {
  //     "matches": ["http://*/*","https://*/*"],
  //     "js": ["js/vendor/jquery-2.0.3.min.js", "js/vendor/jsuri-1.1.1.min.js", "js/popup.js"],
  //     "all_frames":true
  // }],

  "background": {
    "scripts": [ "js/vendor/jsuri-1.1.1.min.js", "background.js" ]
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Domain Switcher",     // optional; shown in tooltip
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs", "http://*/*" , "https://*/*"
  ],

  "web_accessible_resources": [
    "js/jquery-2.0.3.min.map"
  ]


}